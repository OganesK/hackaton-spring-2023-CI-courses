{
  "name": "accelerator-platform-backend",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "lint": "./node_modules/.bin/eslint . --ext .ts",
    "lint:fix": "./node_modules/.bin/eslint . --ext .ts --fix",
    "flowgen": "for file in $(find ./dist -name *.d.ts -type f); do ./node_modules/.bin/flowgen ${file} -o ${file/.d.ts/.js.flow} --add-flow-header; done;",
    "dev": "ts-node-dev --transpile-only --no-notify ./src/index.ts",
    "dev:single": "ts-node-dev --transpile-only --no-notify ./src/server.ts",
    "generate:nexus": "GENERATE_NEXUS=true NODE_ENV=development ts-node --transpile-only src/graphql/schema",
    "generate:prisma": "prisma generate",
    "migrate:up": "npx prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:down": "prisma migrate down 1 --experimental",
    "precommit-check": "yarn generate:prisma && yarn generate:nexus && yarn lint && tsc --noEmit --skipLibCheck",
    "heroku-postbuild": "yarn -s migrate:up && prisma generate && yarn generate:nexus && tsc"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@atomix/eslint-config": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.11.3",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.10.0",
    "eslint-plugin-standard": "^4.0.1",
    "flowgen": "^1.14.1",
    "husky": "^4.3.8",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn precommit-check"
    }
  },
  "dependencies": {
    "@prisma/client": "3.2.1",
    "@types/cookie-parser": "^1.4.2",
    "apollo-datasource": "^3.2.0",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "aws-sdk": "^2.1017.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cuid": "^2.1.8",
    "express": "^4.17.1",
    "graphql": "^15.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^6.1.7",
    "graphql-redis-subscriptions": "^2.4.2",
    "graphql-shield": "^7.5.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-tools": "^8.2.0",
    "graphql-ws": "^5.9.0",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.34",
    "moment": "^2.29.1",
    "nexus": "^1.1.0",
    "nexus-plugin-prisma": "^0.35.0",
    "prisma": "3.2.1",
    "subscriptions-transport-ws": "^0.11.0",
    "ts-node-dev": "^1.1.8",
    "url-parse": "^1.5.3",
    "uuidv4": "^6.2.12",
    "ws": "^8.8.0"
  }
}
